{
  "name": "tinylink-backend",
  "version": "1.0.0",
  "description": "TinyLink URL shortener backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --runInBand --detectOpenHandles",
    "migrate": "psql $DATABASE_URL -f migrations/init.sql",
    "migrate:node": "ts-node migrations/migrate.ts",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "url-shortener",
    "tinylink"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.11.7",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
